RewriteEngine On
#users
RewriteRule ^accueil$ /controllers/indexController.php
RewriteRule ^inscription$ /controllers/users/registerController.php
RewriteRule ^connexion$ /controllers/users/loginController.php
RewriteRule ^mon-compte$ /controllers/users/accountController.php
RewriteRule ^modifier-mon-compte$ /controllers/users/updateAccountController.php
RewriteRule ^deconnexion$ /controllers/users/logoutController.php
RewriteRule ^profile$ /controllers/users/profileController.php
RewriteRule ^contact$ /controllers/users/contactController.php
RewriteRule ^inbox$ /views/pages/inbox.php
RewriteRule ^compte-supprime$ index.php?deleteAccount=true

#posts
RewriteRule ^posts$ /controllers/posts/topicListController.php
RewriteRule ^topics$ /controllers/posts/topicsController.php
#RewriteRule ^threads$ /views/posts/threadsList.php
RewriteRule ^thread$ /controllers/posts/threadController.php
RewriteRule ^forum$ /controllers/posts/forumController.php
RewriteRule ^arena$ /controllers/posts/forumController.php
RewriteRule ^media$ /views/pages/media.php

#ADMIN
RewriteRule ^dashboard$ /controllers/users/adminController.php

#ERRORS
RewriteRule ^errors$ /controllers/errors/errorsController.php
RewriteRule ^error404$ /controllers/errors/404Controller.php